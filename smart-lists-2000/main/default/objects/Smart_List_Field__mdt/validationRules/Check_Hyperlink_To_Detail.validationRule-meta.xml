<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Hyperlink_To_Detail</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL (Smart_List_Definition__r.Data_Source_Type__c, &apos;Apex Data Source&apos; ) &amp;&amp; ISPICKVAL(Display_Type__c, &apos;HYPERLINK_DETAIL&apos;) &amp;&amp; ISBLANK(Hyperlink_to_Detail_Id_Field__c)</errorConditionFormula>
    <errorDisplayField>Hyperlink_to_Detail_Id_Field__c</errorDisplayField>
    <errorMessage>Hyperlink to Detail Id Field is required when Display Type is Hyperlink to Detail for an Apex Data Source</errorMessage>
</ValidationRule>
