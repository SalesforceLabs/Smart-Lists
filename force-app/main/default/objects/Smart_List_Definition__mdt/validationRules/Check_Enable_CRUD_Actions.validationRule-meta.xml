<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Enable_CRUD_Actions</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(Data_Source_Type__c, &quot;Files&quot;) &amp;&amp; (Enable_CRUD_Actions__c ||  Enable_Delete_Record_Action__c ||  Enable_Edit_Record_Action__c ||  Enable_New_Record_Action__c)</errorConditionFormula>
